_s = require 'underscore.string'

exports.matchField = (fieldName) ->
  (form, field, callback) ->
    if form.fields[fieldName].data isnt field.data
      callback null, ['notMatch']
    else
      callback null

exports.required = ->
  (form, field, callback) ->
    if _s.isBlank field.data
      callback null, ['required']
    else
      callback null

exports.min = (val) ->
  (form, field, callback) ->
    if field.data >= val
      callback()
    else
      callback "Please enter a value greater than or equal to " + val + "."

exports.max = (val) ->
  (form, field, callback) ->
    if field.data <= val
      callback()
    else
      callback "Please enter a value less than or equal to " + val + "."

exports.range = (min, max) ->
  (form, field, callback) ->
    if field.data >= min and field.data <= max
      callback()
    else
      callback "Please enter a value between " + min + " and " + max + "."

exports.minlength = (val) ->
  (form, field, callback) ->
    if field.data.length >= val
      callback()
    else
      callback "Please enter at least " + val + " characters."

exports.maxlength = (val) ->
  (form, field, callback) ->
    if field.data.length <= val
      callback()
    else
      callback "Please enter no more than " + val + " characters."

exports.rangelength = (min, max) ->
  (form, field, callback) ->
    if field.data.length >= min and field.data.length <= max
      callback()
    else
      callback "Please enter a value between " + min + " and " + max + " characters long."

exports.regexp = (re, error) ->
  re = (if (typeof re is "string") then new RegExp(re) else re)
  (form, field, callback) ->
    if re.test(field.data)
      console.log 'field : ', field.name, 'RE OK'
      callback()
    else
      console.log 'field : ', field.name, 'RE Bad'
      callback(null, [error] or ['invalid'])

